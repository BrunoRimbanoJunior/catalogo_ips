{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "catalogo_ips",
  "version": "1.4.0",
  "identifier": "com.catalogo-ips",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Catálogo de Peças - IPS",
        "width": 1280,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../data/catalog.db",
      "../manifest.json",
      "../.env.production"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://github.com/BrunoRimbanoJunior/catalogo_ips/releases/latest/download/{{target}}.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ0MzA0QjZFNUQ5QzEwNkQKUldSdEVKeGRia3N3Uk9wQVRaOU01MDJEc1gxUXZJZC9oRWRtZFFtbFdsbFBEaTVaTFZuTEY5Y0IK"
    }
  }
}
